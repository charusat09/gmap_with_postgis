<style>
  #map {
   height: 500px;
   width: 80%;
   margin-left: 10%;
   border-radius: 16px 16px;
   border-color: #fff;
   border-style: solid;
   box-shadow: 2px 2px 10px #B1B1B1;
   margin-top: 25px;
   border-width: 7px;
 }
</style>	

<script>
  // This example creates a simple polygon representing the Bermuda Triangle.
  var polyArray = [];
	function initMap() {
	  var map = new google.maps.Map(document.getElementById('map'), {
	    zoom: 15,
	    center: {lat: 19.119069, lng: 72.900670},
	    mapTypeId: google.maps.MapTypeId.TERRAIN
	  });

	  // Define the LatLng coordinates for the polygon's path.
	  var triangleCoords = <%= hash_json.html_safe %>;

 	  // Construct the polygon.
	  var bermudaTriangle = new google.maps.Polygon({
	    paths: triangleCoords,
	    strokeColor: '#FF0000',
	    strokeOpacity: 0.8,
	    strokeWeight: 2,
	    fillColor: '#FF0000',
	    fillOpacity: 0.35,
	    editable: true
	  });
	  bermudaTriangle.setMap(map);

    // Add a listener for the click event.
	  bermudaTriangle.addListener('click', showArrays);
	  infoWindow = new google.maps.InfoWindow;

	  /** @this {google.maps.Polygon} */
		function showArrays(event) {
		  // Since this polygon has only one path, we can call getPath() to return the
		  // MVCArray of LatLngs.
		  var vertices = this.getPath();

		  var contentString = '<b>Bermuda Triangle polygon</b><br>' +
		      'Clicked location: <br>' + event.latLng.lat() + ',' + event.latLng.lng() +
		      '<br>';

		  // Iterate over the vertices.
		  for (var i =0; i < vertices.getLength(); i++) {
		  	var coordinateArray = [];
        var xy = vertices.getAt(i);
        coordinateArray[0] = xy.lng();
        coordinateArray[1] = xy.lat();
        polyArray.push(coordinateArray);
		    contentString += '<br>' + 'Coordinate ' + i + ':<br>' + xy.lat() + ',' +
		        xy.lng();
		  }

		  // Replace the info window's content and position.
		  infoWindow.setContent(contentString);
		  infoWindow.setPosition(event.latLng);

		  infoWindow.open(map);
		}
	}

	$(".save-polygon").on("click",function(){
    console.log(polyArray);
  var polyName = "<%= polygon_obj_name %>";

    $.ajax({
      url: "<%= save_updated_polygon_gmaps_path %>",
      type:"GET",
      data: {polygon: polyArray,
      			 name: polyName},
      success: function(){
        console.log("saved")
      },
      error: function(){
         console.log('failure');
      }
    });
  });
</script>
<script src="https://maps.googleapis.com/maps/api/js?AIzaSyAy-aeAcZK-K6tgvpxgP0paHYnC8oakqNM&libraries=drawing&callback=initMap"
     async defer></script>